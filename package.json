{
  "name": "for-developers",
  "private": true,
  "description": "",
  "version": "0.1.0",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "commit": "git-cz",
    "format": "prettier --write {*,app/**/*}.{js,jsx,ts,tsx,json,md}",
    "postinstall": "remix setup node",
    "lint": "eslint --cache .",
    "release:dry": "node-env-run --exec 'semantic-release --dry-run'",
    "start": "netlify dev",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,json,md,mdx}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "eslintConfig": {
    "extends": [
      "@remix-run/eslint-config"
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "public",
    "netlify"
  ],
  "release": {
    "branches": [
      "main",
      "alpha",
      "beta"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs/CHANGELOG.md",
            "package.json"
          ]
        }
      ]
    ]
  },
  "dependencies": {
    "@ctrlup/rainbow-react": "^1.2.1",
    "@emotion/cache": "^11.7.1",
    "@emotion/react": "^11.8.1",
    "@emotion/server": "^11.4.0",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.4.4",
    "@mui/material": "^5.4.4",
    "@netlify/functions": "^0.10.0",
    "@remix-run/netlify": "^1.2.3",
    "@remix-run/react": "^1.2.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@remix-run/dev": "^1.2.3",
    "@remix-run/eslint-config": "^1.2.3",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "node-env-run": "^4.0.2",
    "prettier": "^2.5.1",
    "semantic-release": "^19.0.2",
    "sort-package-json": "^1.54.0",
    "typescript": "4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ctrlup-io/for-developers"
  }
}
